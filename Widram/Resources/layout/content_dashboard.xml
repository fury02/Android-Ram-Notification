<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:padding="6dip"
        android:id="@+id/scrollView1">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <ImageView
                android:src="@drawable/transparent16x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView2" />

            <TextView
                android:text="Memory"
                android:textSize="25dp"
                android:textColor="@color/Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/textView1" />

            <ImageView
                android:src="@drawable/transparent16x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView3" />

            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                android:id="@+id/circular_progress"
                app:formattingPattern="%1$.0f MB"
                app:progressColor="@color/DarkGreen"
                app:progressBackgroundColor="@color/DarkGray"
                app:dotColor="@color/DarkOrange"
                app:fillBackground="@color/DarkGray"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:progressStrokeWidth="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:src="@drawable/transparent16x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView5" />

            <TextView
                android:text="Cpu"
                android:textSize="25dp"
                android:textColor="@color/Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/textView2" />

            <ImageView
                android:src="@drawable/transparent16x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView4" />

            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                app:formattingPattern="%1$.0f"
                app:progressColor="@color/DarkViolet"
                app:progressBackgroundColor="@color/DarkGray"
                app:dotColor="@color/Chocolate"
                app:fillBackground="@color/DarkGray"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:progressStrokeWidth="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/circular_progress_cpu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/transparent32x32"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <TextView
                android:text="Extreme test memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="19dp"
                android:textColor="@color/White"
                android:layout_marginRight="25dp"
                android:id="@+id/textView3" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switch1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:id="@+id/bt_linearlayout">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cornerRadius="9dp"
                    android:layout_gravity="center"
                    app:iconTint="@color/White"
                    app:backgroundTint="@color/Brown"
                    app:icon="@drawable/start"
                    app:iconSize="25dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/materialButton1" />

                <ImageView
                    android:src="@drawable/transparent128x32"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView1" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cornerRadius="9dp"
                    android:layout_gravity="center"
                    app:iconTint="@color/Black"
                    app:backgroundTint="@color/DarkGreen"
                    app:icon="@drawable/stop"
                    app:iconSize="20dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/materialButton2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/transparent32x128"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</FrameLayout>