<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id = "@+id/layout_popup"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"   
    android:background="#878787"
    android:gravity = "center">

    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:gravity = "center"
        android:background = "@drawable/shape_popup"      
        android:orientation = "vertical">

        <LinearLayout
            android:layout_width="@dimen/abc_search_view_preferred_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:text="Buy the Widram Pro version in Google Pay?"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tooltip_precise_anchor_threshold"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textSize="21dp"
                android:gravity="center"
                android:layout_margin="@dimen/abc_action_bar_content_inset_material"
                android:textColor="@color/White"
                android:id="@+id/textView1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:gravity="center_horizontal">

            <Button
                android:text="Ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"               
                android:height="50dp"
                android:width="100dp"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/button1" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:height="50dp"
                android:width="100dp"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/button2" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>